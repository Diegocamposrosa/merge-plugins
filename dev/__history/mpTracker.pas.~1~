unit Unit1;

interface

uses Classes, SysUtils;

type
  TProgressEvent = procedure(const i: integer) of object;

  TProgressTracker = class
  private
    FProgressEvent : TProgressEvent;
  public
    procedure Write(const s: string);
    property OnLogEvent: TProgressEvent read FProgressEvent write FProgressEvent;
  end;

var
  Logger : TProgressTracker;

implementation

procedure TProgressTracker.Write(const s: string);
begin
 if Assigned(FProgressEvent) then
   FProgressEvent(s);
end;

initialization
 Logger := TProgressTracker.Create;

finalization
 FreeAndNil(Logger);

end.
